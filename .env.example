# Stock Anomaly Detector Configuration
# Copy this file to .env and fill in your values

# Telegram Bot Configuration (Required for alerts)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_chat_id_here

# Stock Configuration
STOCK_TICKERS=AAPL,GOOGL,MSFT,TSLA
FETCH_INTERVAL_MINUTES=5

# Anomaly Detection Thresholds
ZSCORE_THRESHOLD=3.0
VOLATILITY_PERCENTILE=95
PROPHET_CONFIDENCE_LEVEL=0.95

# Database Configuration
DATABASE_URL=sqlite:///./data/stocks.db

# Logging
LOG_LEVEL=INFO
